{
  "extends": "airbnb",
  "rules": {
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "comma-dangle": 0,
    "key-spacing": [
      2,
      {
        "align": "colon"
      }
    ],
    "no-multi-spaces": [
      2,
      {
        "exceptions": {
          "VariableDeclarator": true,
          "ImportDeclaration": true,
          "AssignmentExpression": true
        }
      }
    ],
    "id-length": [
      2,
      {
        "exceptions": [
          "$",
          "i"
        ]
      }
    ]
  }
}
